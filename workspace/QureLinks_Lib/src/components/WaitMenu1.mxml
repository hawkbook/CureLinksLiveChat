<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:lib="assets.graphics.user.*"
		 xmlns:d="http://ns.adobe.com/fxg/2008/dt"
		 xmlns:components="components.*"
		 width="351" height="132">
	<fx:Script>
		<![CDATA[
			
			import logic.config.DefineNetConnection;

			protected function button_yes_clickHandler():void
			{
				mx.core.FlexGlobals.topLevelApplication.logic.waitUser();
//				currentState = "State2";
				this.visible = false;
			}

			protected function button_no_clickHandler():void
			{
				mx.core.FlexGlobals.topLevelApplication.currentState='ChatEnd';
				this.visible = false;
				navigateToURL( new URLRequest( encodeURI("http://" + DefineNetConnection.url_amebastudio + "/index.cgi")), "_self");
			}

		]]>

	</fx:Script>
	<s:states>
		<s:State name="State1"/>
		<s:State name="State2"/>
	</s:states>
	<s:BitmapImage includeIn="State1" x="0" y="0" smooth="true"
				   source="@Embed('/assets/images/user/alert_bg.png')"/>
	<s:Label includeIn="State1" id="mess" x="12" y="15" width="326" height="60" color="#FFFFFF"
			 fontFamily="ＭＳ Ｐゴシック" fontSize="18" text="現在満員です、このまま待機しますか？" 
			 textAlign="center" verticalAlign="middle"/>
	<s:Button includeIn="State1" x="44" y="83" label="ボタン" click="button_yes_clickHandler()"
			  skinClass="components.alert_btn_yes_Skin"/>
	<s:Button includeIn="State1" x="183" y="83" label="ボタン" click="button_no_clickHandler()"
			  skinClass="components.alert_btn_no_Skin"/>
	<components:WaitMenu2 id="waitMenu2" includeIn="State2" />
</s:Group>
