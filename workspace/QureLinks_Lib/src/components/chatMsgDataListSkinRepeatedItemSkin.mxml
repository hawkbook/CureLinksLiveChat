<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" autoDrawBackground="false"
	xmlns:fc="http://ns.adobe.com/flashcatalyst/2009"
	width="111" height="22"  >
	
    <s:states>
		<s:State name="normal"/>			
		<s:State name="hovered"/>
		<s:State name="selected"/>
	</s:states>
	
    <s:Rect left="0" right="0" top="0" bottom="0">
		<s:fill>
			<s:SolidColor color.normal="#FFFFFF" color.hovered="#EEEEEE" color.selected="#CCCCCC"/>
		</s:fill>
	</s:Rect>
	
	<s:RichText text="{data}" x="3" y="5" fontFamily="Arial"/>

</s:ItemRenderer>