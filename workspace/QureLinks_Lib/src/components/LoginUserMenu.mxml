	</fx:Script>
	
	<s:states>
		<s:State name="State1"/>
	</s:states>
	
	<!-- 背景 -->
	<s:BitmapImage id="login_bg" x="0" y="0" source="@Embed('/assets/images/user/100mei_bg.png')" />
	<!-- 入室 -->
	<s:Button id="new_login_menu_btn1" visible="true" x="44" y="121"
			  skinClass="components.new_login_menu_btn1_ButtonSkin" buttonMode="true"
			  useHandCursor="true" click="enterRoomClickHandler()"/>
	<!-- お試し -->
	<s:Button id="new_login_menu_btn2" visible="true" x="273" y="121"
			  skinClass="components.new_login_menu_btn2_ButtonSkin" buttonMode="true"
			  useHandCursor="true" click="otameshiClickHandler()" />
	<components:OtamesiMask id="otameshi_mask" d:userLabel="otamesi_mask" x="24" y="215" visible="false"/>

