		 xmlns:lib="assets.graphics.user.*"
		 xmlns:d="http://ns.adobe.com/fxg/2008/dt"
		 xmlns:components="components.*"
		 width="520" height="360">
	<fx:Script>
		<![CDATA[
			
			import logic.config.DefineNetConnection;
			
			protected function enterRoomClickHandler():void
			{
				this.new_login_menu_btn1.enabled = false;
				mx.core.FlexGlobals.topLevelApplication.logic.new_login_menu_btn1OnClickHandler(null);
			}

			protected function otameshiClickHandler():void
			{
				this.new_login_menu_btn2.enabled = false;
				mx.core.FlexGlobals.topLevelApplication.logic.new_login_menu_btn2OnClickHandler(null);
			}
